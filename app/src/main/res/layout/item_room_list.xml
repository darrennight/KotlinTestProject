<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="65dp"
                android:background="#99eeeeee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_white">



    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:textColor="@color/color_black"
        android:text="79"/>


    <View
        android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:layout_toRightOf="@id/tv_number"/>
    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/view_line"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        android:text="房源名称:"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_name_title"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        android:layout_marginLeft="5dp"
        android:text="erber"/>



    <TextView
        android:id="@+id/tv_landlord_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/view_line"
        android:layout_below="@id/tv_name_title"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        android:text="房东名字:"/>

    <TextView
        android:id="@+id/tv_landlord_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_landlord_title"
        android:layout_below="@id/tv_name_title"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        android:layout_marginLeft="5dp"
        android:text="bread"/>
    </RelativeLayout>
</RelativeLayout>